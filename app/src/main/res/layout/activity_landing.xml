<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="misbah.naseer.mobilestore.ui.LandingActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_backgroundo" />

    <misbah.naseer.mobilestore.helper.MSEditText
        android:id="@+id/email_et"
        android:hint="Email"
        android:textColorHint="#000000"
        android:layout_centerInParent="true"
        android:inputType="textEmailAddress"
        style="@style/msEditText"/>

    <misbah.naseer.mobilestore.helper.MSEditText
        android:id="@+id/password_et"
        android:hint="Password"
        android:textColorHint="#000000"
        android:layout_below="@+id/email_et"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        style="@style/msEditText" />
    <misbah.naseer.mobilestore.helper.MSButton
        android:id="@+id/sign_in_button"
        android:layout_below="@+id/password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        style="@style/msButton"
        android:text="Sign In"/>
    <misbah.naseer.mobilestore.helper.MSTextView
        android:id="@+id/or_textview"
        android:layout_marginTop="3dp"
        android:text="NEW USER?"
        android:textSize="12sp"
        android:layout_below="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <misbah.naseer.mobilestore.helper.MSButton
        android:id="@+id/sign_up_button"
        android:layout_below="@+id/or_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/WHITE"
        android:layout_marginTop="3dp"
        style="@style/msButtonGreen"
        android:text="Sign up"/>

</RelativeLayout>
