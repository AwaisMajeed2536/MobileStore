<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/order_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/GREEN_COLOUR_TRANSPARENT"
        android:padding="16dp"
        android:text="Please Select The Order Items..."
        android:textSize="20sp" />

    <ListView
        android:id="@+id/items_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/order_button"
        android:layout_below="@+id/order_tv" />

    <Button
        android:id="@+id/order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blueShade"
        android:gravity="center"
        android:text="Place Order"
        android:textColor="@color/WHITE" />

</RelativeLayout>